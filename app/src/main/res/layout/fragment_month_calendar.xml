<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MonthCalendarFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/sunTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="일"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/monTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="월"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="화"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/wedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="수"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/thuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="목"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/friTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="금"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/satTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F087"
        android:gravity="center_horizontal"
        android:text="토"
        android:textColor="#000000" />

</LinearLayout>

<GridView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/gridView"
    android:numColumns="7"
    android:background="#90B0E0"
    android:verticalSpacing="1dp"
    android:horizontalSpacing="1dp"
    >


</GridView>

</LinearLayout>