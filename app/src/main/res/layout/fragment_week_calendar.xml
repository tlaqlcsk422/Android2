<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeekCalendarFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sunTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="일"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/monTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="월"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="화"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/wedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="수"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/thuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="목"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/friTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="금"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/satTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="토"
            android:textColor="#000000" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <GridView
            android:id="@+id/weekDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="8">

        </GridView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/weekTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:isScrollContainer="false"
                    android:numColumns="1">

                </GridView>

                <GridView
                    android:id="@+id/weekGridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#90B0E0"
                    android:horizontalSpacing="1dp"
                    android:isScrollContainer="false"
                    android:numColumns="7"
                    android:padding="1dp"
                    android:verticalSpacing="1dp">

                </GridView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>